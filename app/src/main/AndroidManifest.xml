<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gs355.dailytaskmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListViewActivity"
            android:label="@string/title_activity_list_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gs355.dailytaskmanager.MainActivity" />
        </activity>
        <activity
            android:name=".CreateNewTask"
            android:label="@string/title_activity_create_new_task"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gs355.dailytaskmanager.MainActivity" />
        </activity>

        <provider
            android:name=".data.TaskContentProvider"
            android:authorities="com.example.android.sunshine.app"
            android:enabled="true"
            android:exported="true" >
        </provider>
    </application>

</manifest>
